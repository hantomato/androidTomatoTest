<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <Button
        android:id="@+id/button_center"
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:text="Center" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/button_center"
        android:layout_toLeftOf="@+id/button_center"
        android:text="left\nalignBottom\nOfCenter" />

    <Button
        android:id="@+id/button_right"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/button_center"
        android:layout_toRightOf="@+id/button_center"
        android:text="right\nalignTop\nOfCenter" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/button_center"
        android:layout_above="@+id/button_center"
        android:text="above\nalignLeft\nOfCenter" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/button_center"
        android:layout_below="@+id/button_center"
        android:text="below\nalignLeft\nOfCenter" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignRight="@+id/button_right"
        android:layout_below="@+id/button_center"
        android:layout_toRightOf="@+id/button_center"
        android:text="a" />

</RelativeLayout>